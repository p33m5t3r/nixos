# Zathura configuration - Nord Fox theme

# Dark mode colors (recolor) - softer contrast
set recolor true
set recolor-darkcolor "#cdcecf"
set recolor-lightcolor "#2e3440"
set recolor-keephue true

# Default colors
set default-bg "#2e3440"
set default-fg "#cdcecf"

# Status bar colors
set statusbar-fg "#cdcecf"
set statusbar-bg "#3b4252"

# Input bar colors
set inputbar-bg "#3b4252"
set inputbar-fg "#e5e9f0"

# Notification colors
set notification-bg "#3b4252"
set notification-fg "#e5e9f0"

# Search highlighting
set highlight-color "#ebcb8b"
set highlight-active-color "#81a1c1"

# Completion colors
set completion-bg "#3b4252"
set completion-fg "#cdcecf"
set completion-highlight-bg "#81a1c1"
set completion-highlight-fg "#2e3440"

# Index colors
set index-bg "#2e3440"
set index-fg "#cdcecf"
set index-active-bg "#81a1c1"
set index-active-fg "#2e3440"

# Other settings
set selection-clipboard clipboard
set smooth-scroll true
set window-title-basename true
set adjust-open width